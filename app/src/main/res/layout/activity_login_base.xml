<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/login_nav_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            android:src="@drawable/login_bg"/>

        <View
            android:id="@+id/login_status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/login_status_bar_view">

            <Button
                android:id="@+id/login_nav_bar_back_btn"
                android:layout_width="@dimen/nav_bar_height"
                android:layout_height="@dimen/nav_bar_height"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/nav_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/login_nav_bar_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/h3" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_base_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/login_nav_bar_rl"
        android:background="@color/main_background"
        android:orientation="vertical" />

</RelativeLayout>
