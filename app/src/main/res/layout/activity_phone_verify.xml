<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="您的手机号码"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/h5"/>

    <TextView
        android:id="@+id/safe_verify_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="139 8888 6666"
        android:textColor="@color/font_black"
        android:textSize="@dimen/h3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="30dp">

        <!--<Button
            android:id="@+id/safe_verify_phone_code_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/msg_code_bg"
            android:text="获取验证码"
            android:textSize="@dimen/h5"
            android:textColor="@color/white"/>-->
        <Button
            android:id="@+id/safe_verify_phone_code_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_verifi_login"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/h5" />
        <EditText
            android:id="@+id/safe_verify_phone_code_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/safe_verify_phone_code_btn"
            android:background="@null"
            android:inputType="phone"
            android:hint="请输入短信验证码"
            android:textColor="@color/font_black"
            android:textSize="@dimen/h5"/>
    </RelativeLayout>

   <!-- <Button
        android:id="@+id/safe_verify_phone_ok_btn"
