<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="#ECF0F8"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/login_bg"
        android:text="通知"
        android:gravity="center"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"/>
    <RelativeLayout
        android:id="@+id/rl_tender_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/dp_16"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/call_notice_jpg"/>

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toRightOf="@+id/image"
            android:text="招标通知"
            android:textColor="@color/grey_first"
            android:textSize="@dimen/dp_16" />
        <TextView
            android:id="@+id/not_notica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无招标讯息"
            android:layout_toRightOf="@+id/image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:layout_below="@+id/notification"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/super_light_grey"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_85"
        android:background="@mipmap/ico_sep"
        android:layout_marginTop="@dimen/dp_10"
        />
    <RelativeLayout
        android:id="@+id/rl_ipass_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/dp_16"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ipass_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/ipass_jpg"/>
        <TextView
            android:id="@+id/ipass_notifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPASS业务通知"
            android:layout_toRightOf="@+id/ipass_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/grey_first"/>
        <TextView
            android:id="@+id/ipass_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无iPASS业务通知"
            android:layout_toRightOf="@+id/ipass_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:layout_below="@+id/ipass_notifica"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/super_light_grey"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_85"
        android:background="@mipmap/ico_sep"
        android:layout_marginTop="@dimen/dp_10"
        />
    <RelativeLayout
        android:id="@+id/rl_system_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/dp_16"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/system_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/setting_jpg"/>
        <TextView
            android:id="@+id/system_notifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:layout_toRightOf="@+id/system_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/grey_first"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无系统讯息"
            android:layout_toRightOf="@+id/system_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:layout_below="@+id/system_notifica"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/super_light_grey"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_85"
        android:background="@mipmap/ico_sep"
        android:layout_marginTop="@dimen/dp_10"
        />
    <RelativeLayout
        android:id="@+id/rl_else_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="@dimen/dp_16"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/else_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/else_jpg"/>
        <TextView
            android:id="@+id/else_notifica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他通知"
            android:layout_toRightOf="@+id/else_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/grey_first"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无通知"
            android:layout_toRightOf="@+id/else_image"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:layout_below="@+id/else_notifica"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/super_light_grey"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_85"
        android:background="@mipmap/ico_sep"
        android:layout_marginTop="@dimen/dp_10"
        />
</LinearLayout>